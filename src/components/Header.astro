---
import { Icon } from "astro-icon/components";
//import * as about from "../content/about/en/about.md";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<header class="mx-auto pt-6 pb-2 relative">
  <article
    class="flex flex-col md:flex-col items-center gap-4 w-full max-w-2xl"
  >
    <div
      class="flex-shrink-0 w-20 md:w-24 rounded-full shadow-sm overflow-hidden mx-auto"
    >
      <img
        alt="avatar"
        src="/profile.jpg"
        class="grayscale-[50] hover:grayscale-0 rounded-full"
      />
    </div>

    <div class="text-center">
      <div
        class="flex justify-center md:justify-between items-center mb-2 relative"
      >
        <h1 class="text-3xl font-extrabold tracking-tight md:text-3xl relative">
          {t('about.name')}
        </h1>
      </div>
      <h2 class="text-lg mb-2 text-secondary">
        {t('about.designation')}
      </h2>
      <div class="flex items-center justify-center mt-1">
        <Icon name="carbon:location" class="w-4 h-4 mr-1" />
        <p class="text-sm text-secondary">{t('about.location')}</p>
      </div>
    </div>
  </article>
</header>

<style>
  @media (max-width: 768px) {
    .flex-col.justify-end {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
  }
</style>
